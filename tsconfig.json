{
  "extends": "@spotify/tsconfig",
  // "include": ["src"],
  // "exclude": ["node_modules", "**/__tests__/*"],
  "compilerOptions": {
    "target": "ES2023",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "isolatedModules": false,
    "noEmit": false,
    "noImplicitThis": false,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    ".eslintrc.js",
    "jest.config.js",
    "prettier.config.js",
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts",
    "**/__tests__/*"
  ]
}
