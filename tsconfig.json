{
  "extends": "@spotify/tsconfig",
  "compilerOptions": {
    "target": "ES2023",
    "module": "commonjs",
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": false
  },
  "include": [
    "src/**/*",
    ".eslintrc.js",
    "prettier.config.js",
    "tsup.config.ts",
    "vitest.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts",
    "**/__tests__/*"
  ]
}
