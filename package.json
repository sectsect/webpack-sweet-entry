{
  "name": "@sect/webpack-sweet-entry",
  "version": "2.6.1",
  "description": "Dynamic entry points with wildcards / Partial files named with a leading underscore / Keep Directory Structure for output",
  "engines": {
    "node": ">=10.0.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --coverage",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --fix --ext .ts src",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "release": "release-it"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sectsect/webpack-sweet-entry.git"
  },
  "keywords": [
    "webpack"
  ],
  "author": "SECT",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sectsect/webpack-sweet-entry/issues"
  },
  "homepage": "https://github.com/sectsect/webpack-sweet-entry#readme",
  "browserslist": "> 1%, last 1 versions",
  "devDependencies": {
    "@spotify/prettier-config": "^9.0.0",
    "@spotify/tsconfig": "^9.0.0",
    "@types/jest": "^26.0.18",
    "@types/node": "^14.14.11",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "release-it": "^14.2.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "fast-glob": "^3.2.4"
  },
  "files": [
    "dist/**/*"
  ]
}
